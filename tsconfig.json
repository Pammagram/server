{
  "extends": "./tsconfig.checks",
  "include": ["./src", "env.d.ts", "jest.config.ts"],
  "exclude": ["**/__tests__/*", "**/__mocks__/*"],
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES6",
    "lib": ["ES6"],
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@config": ["config"],
      "@config/*": ["config/*"],
      "@core/*": ["core/*"],
    }
  }
}
